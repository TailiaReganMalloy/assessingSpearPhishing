<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BlueMind - Login</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="container">
        <div class="logo">
            <img src="/bluemind-logo.png" alt="BlueMind Logo">
            <span>BlueMind</span>
            <span class="version">v5</span>
        </div>

        <div class="card">
            <div class="card-header">
                Identification
            </div>
            <div class="card-body">
                <% if (typeof error !== 'undefined') { %>
                    <div class="error-message"><%= error %></div>
                <% } %>
                <form action="/login" method="POST">
                    <div class="input-group">
                        <i class="fas fa-envelope icon"></i>
                        <input type="email" id="email" name="email" placeholder="email@bluemind.net" required>
                    </div>
                    <div class="input-group">
                        <i class="fas fa-lock icon"></i>
                        <input type="password" id="password" name="password" placeholder="********" required>
                        <i class="fas fa-eye eye-icon"></i>
                    </div>
                    <div class="radio-group">
                        <label>
                            <input type="radio" name="computer_type" value="private" checked>
                            <i class="far fa-check-circle checked-icon"></i>
                            Private computer
                        </label>
                        <label>
                            <input type="radio" name="computer_type" value="public">
                            <i class="far fa-circle unchecked-icon"></i>
                            Public computer
                        </label>
                    </div>
                    <button type="submit" class="btn">Connect</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
