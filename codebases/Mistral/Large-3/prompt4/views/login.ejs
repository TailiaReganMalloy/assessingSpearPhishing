<div class="login-container">
    <div class="login-header">
        <div class="logo-container">
            <img src="/images/logo.png" alt="BlueMind Logo" class="logo">
        </div>
        <div class="version">v5</div>
    </div>
    
    <h1 class="login-title">Identification</h1>
    
    <form action="/login" method="POST" class="login-form">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        
        <div class="form-group">
            <label class="form-label">
                <input type="checkbox" class="form-checkbox"> Login
            </label>
            <input type="email" name="email" class="form-input" placeholder="email@bluemind.net" value="<%= email %>">
        </div>
        
        <div class="form-group">
            <label class="form-label">Password</label>
            <div class="password-input-container">
