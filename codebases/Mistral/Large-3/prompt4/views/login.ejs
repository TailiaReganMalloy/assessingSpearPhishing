                <span class="password-toggle">ğŸ‘</span>
            </div>
        </div>
        
        <div class="form-group computer-type">
            <p>This computer is a:</p>
            <label class="radio-label">
                <input type="radio" name="computerType" value="private" checked>
                <span class="radio-custom"></span> Private computer
            </label>
            <label class="radio-label">
                <input type="radio" name="computerType" value="public">
                <span class="radio-custom"></span> Public computer
            </label>
        </div>
        
        <button type="submit" class="login-button">Connect</button>
    </form>
    
    <div class="login-footer">
        <p>Don't have an account? <a href="/register">Register here</a></p>
    </div>
</div>

