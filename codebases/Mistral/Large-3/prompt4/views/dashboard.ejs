<div class="dashboard-container">
    <div class="dashboard-header">
        <div class="logo-container">
            <img src="/images/logo.png" alt="BlueMind Logo" class="logo">
        </div>
        <div class="version">v5</div>
    </div>
    
    <div class="dashboard-content">
        <div class="dashboard-sidebar">
            <div class="user-info">
                <h3>Welcome, <%= user.email %></h3>
                <p>Member since: <%= new Date(user.created_at).toLocaleDateString() %></p>
            </div>
            
            <nav class="dashboard-nav">
                <ul>
                    <li><a href="/dashboard" class="active">Inbox (<%= messages.length %>)</a></li>
                    <li><a href="/send-message">Send Message</a></li>
                    <li><a href="/logout">Logout</a></li>
                </ul>
            </nav>
        </div>
        
        <div class="dashboard-main">
            <h1 class="dashboard-title">Your Messages</h1>
            
            <% if (messages.length > 0) { %>
                <div class="messages-list">
                    <% messages.forEach(message => { %>
                        <div class="message-card">
                            <div class="message-header">
                                <span class="message-from">From: <%= message.sender_email %></span>
                                <span class="message-date"><%= new Date(message.created_at).toLocaleString() %></span>
                            </div>
                            <div class="message-content">
                                <%= message.content %>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="no-messages">
                    <p>You have no messages yet.</p>
                </div>
            <% } %>
        </div>
    </div>
</div>