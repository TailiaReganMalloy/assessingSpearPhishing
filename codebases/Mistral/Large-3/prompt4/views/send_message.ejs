<div class="dashboard-container">
    <div class="dashboard-header">
        <div class="logo-container">
            <img src="/images/logo.png" alt="BlueMind Logo" class="logo">
        </div>
        <div class="version">v5</div>
    </div>
    
    <div class="dashboard-content">
        <div class="dashboard-sidebar">
            <div class="user-info">
                <h3>Welcome, <%= user.email %></h3>
                <p>Member since: <%= new Date(user.created_at).toLocaleDateString() %></p>
            </div>
            
            <nav class="dashboard-nav">
                <ul>
                    <li><a href="/dashboard">Inbox</a></li>
                    <li><a href="/send-message" class="active">Send Message</a></li>
                    <li><a href="/logout">Logout</a></li>
                </ul>
            </nav>
        </div>
        
        <div class="dashboard-main">
            <h1 class="dashboard-title">Send Message</h1>
            
            <form action="/send-message" method="POST" class="message-form">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                
                <div class="form-group">
                    <label for="receiver_id" class="form-label">Recipient</label>
                    <select name="receiver_id" id="receiver_id" class="form-input" required>
                        <option value="">Select a user</option>
                        <% users.forEach(u => { %>
                            <option value="<%= u.id %>"><%= u.email %></option>
                        <% }); %>
                    </select>
                </div>
                
                <div class="form-group">
                    <label for="content" class="form-label">Message</label>
                    <textarea name="content" id="content" class="form-input message-textarea" rows="8" required maxlength="1000"></textarea>
                    <div class="char-count">0/1000 characters</div>
                </div>
                
                <button type="submit" class="login-button">Send Message</button>
            </form>
        </div>
    </div>
</div>

<script>
    // Character counter
    const textarea = document.getElementById('content');
    const charCount = document.querySelector('.char-count');
    
    textarea.addEventListener('input', function() {
        const count = this.value.length;
        charCount.textContent = `${count}/1000 characters`;
    });
</script>