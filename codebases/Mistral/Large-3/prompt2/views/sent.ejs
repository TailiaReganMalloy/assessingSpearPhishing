<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sent Messages | Secure Messaging</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <div class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
        <div class="position-sticky pt-3">
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link" href="/messages/inbox">
                Inbox
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/messages/sent">
                Sent Messages
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/messages/compose">
                Compose
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/auth/logout">
                Logout
              </a>
            </li>
          </ul>
        </div>
      </div>
      
      <!-- Main Content -->
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">Sent Messages</h1>
        </div>
        
        <div class="table-responsive">
          <table class="table table-striped table-sm">
            <thead>
              <tr>
                <th>To</th>
                <th>Subject</th>
                <th>Date</th>
              </tr>
            </thead>
            <tbody>
              <% messages.forEach(message => { %>
                <tr>
                  <td><%= message.recipient.email %></td>
                  <td><%= message.subject %></td>
                  <td><%= message.createdAt.toLocaleString() %></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </main>
    </div>
  </div>
</body>
</html>