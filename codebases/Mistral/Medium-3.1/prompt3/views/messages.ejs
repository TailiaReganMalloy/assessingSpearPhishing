<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Messages</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <h1>Messages</h1>
    <% if (error) { %>
      <p class="error"><%= error %></p>
    <% } %>
    <div class="messages">
      <% messages.forEach(message => { %>
        <div class="message <%= message.sender._id.equals(userId) ? 'sent' : 'received' %>">
          <p><strong><%= message.sender.username %></strong>: <%= message.content %></p>
          <small><%= message.createdAt.toLocaleString() %></small>
        </div>
      <% }); %>
    </div>
    <form action="/messages/send" method="POST">
      <div class="form-group">
        <label for="recipientId">Recipient ID</label>
        <input type="text" id="recipientId" name="recipientId" required>
      </div>
      <div class="form-group">
        <label for="content">Message</label>
        <textarea id="content" name="content" required></textarea>
      </div>
      <button type="submit">Send</button>
    </form>
    <a href="/auth/logout">Logout</a>
  </div>
</body>
</html>