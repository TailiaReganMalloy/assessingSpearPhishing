<% layout('layout') -%>
<section>
  <% if (currentUser) { %>
    <h1>Welcome, <%= currentUser.name %>!</h1>
    <p>Go to your <a href="/inbox">Inbox</a> or <a href="/compose">Compose</a> a message.</p>
  <% } else { %>
    <h1>Welcome to Secure Mailer</h1>
    <p>A teaching reference for secure auth and messaging.</p>
    <p><a class="btn" href="/login">Login</a> or <a href="/register">Register</a> to get started.</p>
  <% } %>
</section>
