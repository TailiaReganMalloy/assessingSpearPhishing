<% layout('layout') -%>
<section>
  <h2>Sent Messages</h2>
  <% if (!messages || messages.length === 0) { %>
    <p>No sent messages yet.</p>
  <% } else { %>
    <ul class="list">
      <% messages.forEach(m => { %>
        <li class="message read">
          <div class="meta">To <strong><%= m.recipient_name %></strong> &lt;<%= m.recipient_email %>&gt; â€” <%= new Date(m.created_at).toLocaleString() %></div>
          <div class="content"><%= m.content %></div>
        </li>
      <% }) %>
    </ul>
  <% } %>
</section>
