<%- include('partials/header', { title: 'Identification' }) %>

<section class="auth-card">
  <div class="auth-card__top"></div>
  <div class="auth-card__body">
    <h1>Identification</h1>
    <% if (error) { %>
      <div class="alert"><%= error %></div>
    <% } %>
    <form action="/login" method="post" class="auth-form">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
      <label class="input-row">
        <span class="input-icon">âœ‰ï¸</span>
        <span class="input-label">Login</span>
        <input type="email" name="email" required value="<%= email %>" placeholder="email@bluemind.net" />
      </label>
      <label class="input-row">
        <span class="input-icon">ğŸ”’</span>
        <span class="input-label">Password</span>
        <input type="password" name="password" required value="" placeholder="********" />
      </label>
      <div class="radio-group">
        <label><input type="radio" name="mode" checked /> Private computer</label>
        <label><input type="radio" name="mode" /> Public computer</label>
      </div>
      <button class="primary-button" type="submit">Connect</button>
    </form>
    <div class="auth-footer">
      <span>New here?</span>
      <a href="/register">Create an account</a>
    </div>
  </div>
</section>

<%- include('partials/footer') %>
