<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Secure Mail - Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Secure Mail</a>
            <div class="navbar-nav ms-auto">
                <span class="navbar-text me-3">Welcome, <%= username %>!</span>
                <a class="nav-link" href="/logout">Logout</a>
            </div>
        </div>
    </nav>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h3>Inbox</h3>
                <% if (inbox.length === 0) { %>
                    <p class="text-muted">No messages yet.</p>
                <% } else { %>
                    <div class="list-group">
                        <% inbox.forEach(msg => { %>
                            <div class="list-group-item">
                                <strong>From: <%= msg.from_username %></strong> 
                                <small class="text-muted float-end"><%= new Date(msg.created_at).toLocaleString() %></small>
                                <p class="mb-0 mt-1"><%= msg.message %></p>
                            </div>
                        <% }) %>
                    </div>
                <% } %>
            </div>
            <div class="col-md-6">
                <h3>Send Message</h3>
                <form method="POST" action="/send-message">
                    <div class="mb-3">
                        <label for="to_username" class="form-label">To:</label>
                        <select class="form-select" id="to_username" name="to_username" required>
                            <option value="">Select user...</option>
                            <% users.forEach(user => { %>
                                <option value="<%= user.username %>"><%= user.username %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label">Message:</label>
                        <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Send</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
