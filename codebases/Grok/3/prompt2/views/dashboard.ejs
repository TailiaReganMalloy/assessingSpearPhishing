<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header class="header">
        <div class="logo">BlueMind</div>
        <div class="user-info">
            Welcome, <%= currentUser.username %> | <a href="/logout">Logout</a>
        </div>
    </header>
    <div class="container dashboard">
        <div class="panel messages-panel">
            <h2>Messages</h2>
            <% if (messages.length === 0) { %>
                <p>No messages received.</p>
            <% } else { %>
                <ul class="message-list">
                    <% messages.forEach(message => { %>
                        <li class="message-item <%= message.read ? 'read' : 'unread' %>">
                            <strong>From: <%= message.sender.username %></strong> - <%= message.content %>
                            <small><%= message.timestamp.toLocaleString() %></small>
                        </li>
                    <% }) %>
                </ul>
            <% } %>
        </div>
        <div class="panel send-message-panel">
            <h2>Send Message</h2>
            <form action="/message" method="POST">
                <div class="form-group">
                    <label for="receiver">To:</label>
                    <select id="receiver" name="receiver" required>
                        <% users.forEach(user => { %>
                            <option value="<%= user._id %>"><%= user.username %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="content">Message:</label>
                    <textarea id="content" name="content" required></textarea>
                </div>
                <button type="submit" class="connect-btn">Send</button>
            </form>
        </div>
    </div>
</body>
</html>