<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>BlueMind v5 - Messages</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <header class="header">
    <div class="logo">
      <span class="icon">&#x2B22;</span> BlueMind
    </div>
    <div class="user-info">
      Welcome, <%= currentUser.username %> | <a href="/logout">Logout</a>
    </div>
  </header>
  <div class="container">
    <div class="messages-panel">
      <h2>Messages</h2>
      <div class="message-list">
        <% messages.forEach(message => { %>
          <div class="message <%= message.sender._id.toString() === currentUser._id.toString() ? 'sent' : 'received' %>">
            <p><strong><%= message.sender.username %> to <%= message.recipient.username %>:</strong> <%= message.content %></p>
            <small><%= message.createdAt.toLocaleString() %></small>
          </div>
        <% }) %>
      </div>
      <div class="send-message">
        <h3>Send a Message</h3>
        <form action="/messages/send" method="POST">
          <div class="form-group">
            <label for="recipient">To:</label>
            <select id="recipient" name="recipient" required>
              <option value="">Select a user</option>
              <% users.forEach(user => { %>
                <option value="<%= user._id %>"><%= user.username %></option>
              <% }) %>
            </select>
          </div>
          <div class="form-group">
            <label for="content">Message:</label>
            <textarea id="content" name="content" required></textarea>
          </div>
          <button type="submit" class="connect-btn">Send</button>
        </form>
      </div>
    </div>
  </div>
</body>
</html>