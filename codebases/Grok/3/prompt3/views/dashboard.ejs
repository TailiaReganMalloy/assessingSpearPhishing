<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header class="header">
        <div class="logo">
            <span class="icon">&#x2B22;</span> BlueMind
        </div>
        <div class="user-info">
            Welcome, <%= user.username %> | <a href="/logout">Logout</a>
        </div>
    </header>
    <main class="dashboard-container">
        <div class="dashboard-panel">
            <h2>Messages</h2>
            <div class="message-list">
                <% if (messages.length === 0) { %>
                    <p>No messages yet.</p>
                <% } else { %>
                    <% messages.forEach(message => { %>
                        <div class="message-item">
                            <strong>From: <%= message.sender %></strong> at <%= message.timestamp %>
                            <p><%= message.content %></p>
                        </div>
                    <% }); %>
                <% } %>
            </div>
            <div class="send-message">
                <h3>Send a Message</h3>
                <form action="/send-message" method="POST">
                    <div class="form-group">
                        <label for="receiver">To:</label>
                        <input type="text" id="receiver" name="receiver" required placeholder="Username">
                    </div>
                    <div class="form-group">
                        <label for="content">Message:</label>
                        <textarea id="content" name="content" required></textarea>
                    </div>
                    <button type="submit" class="connect-btn">Send</button>
                </form>
            </div>
        </div>
    </main>
</body>
</html>
