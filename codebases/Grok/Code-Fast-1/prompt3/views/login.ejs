<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BlueMind v5 - Login</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <div class="logo">
            <span class="icon">â¬¡</span> BlueMind
        </div>
    </header>
    <main>
        <div class="login-panel">
            <h1>Identification</h1>
            <% if (typeof error !== 'undefined') { %>
                <p class="error"><%= error %></p>
            <% } %>
            <form action="/login" method="POST">
                <div class="form-group">
                    <label for="username">Login</label>
                    <input type="text" id="username" name="username" required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required>
                </div>
                <div class="radio-group">
                    <label>
                        <input type="radio" name="computer" value="private" checked>
                        Private computer
                    </label>
                    <label>
                        <input type="radio" name="computer" value="public">
                        Public computer
                    </label>
                </div>
                <button type="submit" class="connect-btn">Connect</button>
            </form>
        </div>
    </main>
</body>
</html>