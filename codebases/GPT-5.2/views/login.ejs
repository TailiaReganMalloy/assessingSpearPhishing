<% layout('layout') -%>

<section class="panel">
  <h1 class="panel__title">Identification</h1>

  <% if (error) { %>
    <div class="alert" role="alert"><%= error %></div>
  <% } %>

  <form method="post" action="/login" class="form">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

    <label class="field">
      <span class="field__label">Login</span>
      <input class="field__input" type="email" name="email" autocomplete="username" placeholder="email@bluemind.net" required />
    </label>

    <label class="field">
      <span class="field__label">Password</span>
      <input class="field__input" type="password" name="password" autocomplete="current-password" placeholder="********" required />
    </label>

    <div class="options">
      <label class="radio">
        <input type="radio" name="computer" value="private" checked />
        <span>Private computer</span>
      </label>
      <label class="radio">
        <input type="radio" name="computer" value="public" />
        <span>Public computer</span>
      </label>
    </div>

    <button class="btn" type="submit">Connect</button>
  </form>

  <div class="muted">
    No account? <a href="/register">Create one</a>
  </div>
</section>
