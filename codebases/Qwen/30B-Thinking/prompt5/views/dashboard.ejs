<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - Web Security Example</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <div class="dashboard-container">
    <h1>Messages</h1>
    <div class="messages-list">
      <% messages.forEach(message => { %>
        <div class="message">
          <p><strong>From:</strong> <%= message.sender.email %></p>
          <p><strong>Message:</strong> <%= message.content %></p>
          <p><small><%= message.timestamp.toLocaleString() %></small></p>
        </div>
      <% }) %>
    </div>
    <form action="/messages/send" method="POST">
      <div class="form-group">
        <label for="receiver">Receiver Email</label>
        <input type="email" id="receiver" name="receiverId" required>
      </div>
      <div class="form-group">
        <label for="content">Message</label>
        <textarea id="content" name="content" required></textarea>
      </div>
      <button type="submit" class="connect-btn">Send Message</button>
    </form>
  </div>
</body>
</html>