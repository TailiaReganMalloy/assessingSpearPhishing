<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BlueMind v5 - Dashboard</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Header bar with BlueMind logo -->
    <header class="header-bar">
        <div class="logo-container">
            <div class="logo-icon">â¬¢</div>
            <h1 class="logo-text">BlueMind</h1>
        </div>
        <div class="user-info">
            <span>Welcome, <%= user %>!</span>
            <span class="computer-type">(Using <%= computerType %> computer)</span>
            <form action="/logout" method="POST" style="display: inline;">
                <button type="submit" class="logout-button">Logout</button>
            </form>
        </div>
    </header>

    <!-- Main content area -->
    <main class="main-content dashboard">
        <div class="messages-section">
            <h2>Your Messages</h2>
            
            <% if (typeof messages !== 'undefined' && messages.length > 0) { %>
                <div class="messages-list">
                    <% messages.forEach(message => { %>
                        <div class="message-card">
                            <div class="message-header">
                                <span class="sender"><strong><%= message.sender %></strong></span>
                                <span class="timestamp"><%= new Date(message.timestamp).toLocaleString() %></span>
                            </div>
                            <div class="message-content">
                                <%= message.content %>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <p class="no-messages">You have no messages.</p>
            <% } %>
        </div>
        
        <div class="send-message-section">
            <h3>Send a Message</h3>
            <form id="sendMessageForm">
                <div class="form-group">
                    <label for="recipient">Recipient</label>
                    <input type="text" id="recipient" name="recipient" required>
                </div>
                
                <div class="form-group">
                    <label for="content">Message</label>
                    <textarea id="content" name="content" rows="4" required></textarea>
                </div>
                
                <button type="submit" class="send-button">Send Message</button>
            </form>
        </div>
    </main>

    <script src="/js/dashboard.js"></script>
</body>
</html>