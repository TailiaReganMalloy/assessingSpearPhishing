<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Secure Messaging - Register</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="register-page">
    <div class="login-container">
        <div class="login-box">
            <div class="logo-section">
                <h1>SecureMsg</h1>
                <p>v1.0 - Educational Platform</p>
            </div>

            <div class="login-form-container">
                <h2>Create Account</h2>

                <% if (error) { %>
                    <div class="alert alert-error">
                        <%= error %>
                    </div>
                <% } %>

                <form method="POST" action="/register" class="login-form">
                    <div class="form-group">
                        <label for="fullName">Full Name</label>
                        <input 
                            type="text" 
                            id="fullName" 
                            name="fullName"
                            placeholder="John Doe"
                            required
                        >
                    </div>

                    <div class="form-group">
                        <label for="email">
                            <span class="icon">âœ‰</span> Email Address
                        </label>
                        <input 
                            type="email" 
                            id="email" 
                            name="email" 
                            placeholder="email@example.com"
                            required
                            autocomplete="email"
                        >
                    </div>

                    <div class="form-group">
                        <label for="password">
                            <span class="icon">ğŸ”’</span> Password
                        </label>
                        <div class="password-input-group">
                            <input 
                                type="password" 
                                id="password" 
                                name="password"
                                placeholder="At least 8 characters"
                                required
                                autocomplete="new-password"
                                minlength="8"
                            >
                            <button type="button" class="toggle-password" onclick="togglePassword('password')">
                                ğŸ‘
                            </button>
                        </div>
                        <small>Must be at least 8 characters</small>
                    </div>

                    <div class="form-group">
                        <label for="confirmPassword">
                            <span class="icon">ğŸ”’</span> Confirm Password
                        </label>
                        <div class="password-input-group">
                            <input 
                                type="password" 
                                id="confirmPassword" 
                                name="confirmPassword"
                                placeholder="Re-enter password"
                                required
                                autocomplete="new-password"
                                minlength="8"
                            >
                            <button type="button" class="toggle-password" onclick="togglePassword('confirmPassword')">
                                ğŸ‘
                            </button>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary btn-login">Create Account</button>
                </form>

                <div class="auth-links">
                    <p>Already have an account? <a href="/login">Login here</a></p>
                </div>
            </div>

            <div class="security-info">
                <p><strong>ğŸ” Security Features:</strong> Your password is hashed using bcrypt before storage. We never store plain text passwords.</p>
            </div>
        </div>
    </div>

    <script>
        function togglePassword(fieldId) {
            const input = document.getElementById(fieldId);
            const button = event.target;
            if (input.type === 'password') {
                input.type = 'text';
                button.textContent = 'ğŸ™ˆ';
            } else {
                input.type = 'password';
                button.textContent = 'ğŸ‘';
            }
        }
    </script>
</body>
</html>
