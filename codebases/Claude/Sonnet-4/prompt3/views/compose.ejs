<%- include('partials/header') %>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3><i class="bi bi-envelope-plus"></i> Compose Message</h3>
            </div>
            <div class="card-body">
                <form method="POST" action="/messages/send">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    
                    <div class="mb-3">
                        <label for="recipient_id" class="form-label">To:</label>
                        <select class="form-select" id="recipient_id" name="recipient_id" required>
                            <option value="">Select a recipient...</option>
                            <% recipients.forEach(function(recipient) { %>
                                <option value="<%= recipient.id %>"><%= recipient.email %></option>
                            <% }); %>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="subject" class="form-label">Subject:</label>
                        <input type="text" 
                               class="form-control" 
                               id="subject" 
                               name="subject" 
                               maxlength="200" 
                               required>
                    </div>

                    <div class="mb-3">
                        <label for="content" class="form-label">Message:</label>
                        <textarea class="form-control" 
                                  id="content" 
                                  name="content" 
                                  rows="10" 
                                  maxlength="5000" 
                                  required
                                  placeholder="Type your message here..."></textarea>
                        <div class="form-text">Maximum 5,000 characters</div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="/messages" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-send"></i> Send Message
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>