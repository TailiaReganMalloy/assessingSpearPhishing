<%- include('partials/header') %>

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="mb-0"><i class="bi bi-envelope-open"></i> Message Details</h3>
                <div>
                    <% if (message.recipient_id === user.id && !message.read_at) { %>
                        <span class="badge bg-primary">New</span>
                    <% } else if (message.read_at) { %>
                        <span class="badge bg-success">Read</span>
                    <% } else { %>
                        <span class="badge bg-secondary">Sent</span>
                    <% } %>
                </div>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <div class="row">
                        <div class="col-sm-3">
                            <strong>From:</strong>
                        </div>
                        <div class="col-sm-9">
                            <%= message.sender_email %>
                        </div>
                    </div>
                </div>
                
                <div class="mb-3">
                    <div class="row">
                        <div class="col-sm-3">
                            <strong>To:</strong>
                        </div>
                        <div class="col-sm-9">
                            <%= message.recipient_email %>
                        </div>
                    </div>
                </div>
                
                <div class="mb-3">
                    <div class="row">
                        <div class="col-sm-3">
                            <strong>Subject:</strong>
                        </div>
                        <div class="col-sm-9">
                            <%= message.subject %>
                        </div>
                    </div>
                </div>
                
                <div class="mb-3">
                    <div class="row">
                        <div class="col-sm-3">
                            <strong>Date:</strong>
                        </div>
                        <div class="col-sm-9">
                            <%= new Date(message.created_at).toLocaleDateString() %>
                            <%= new Date(message.created_at).toLocaleTimeString() %>
                        </div>
                    </div>
                </div>
                
                <% if (message.read_at) { %>
                    <div class="mb-3">
                        <div class="row">
                            <div class="col-sm-3">
                                <strong>Read:</strong>
                            </div>
                            <div class="col-sm-9">
                                <span class="text-success">
                                    <%= new Date(message.read_at).toLocaleDateString() %>
                                    <%= new Date(message.read_at).toLocaleTimeString() %>
                                </span>
                            </div>
                        </div>
                    </div>
                <% } %>
                
                <hr>
                
                <div class="message-content">
                    <pre class="bg-light p-3 rounded" style="white-space: pre-wrap; font-family: inherit;"><%= message.content %></pre>
                </div>
            </div>
            <div class="card-footer">
                <a href="/messages" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Messages
                </a>
                
                <% if (message.sender_id !== user.id) { %>
                    <a href="/messages/compose" class="btn btn-primary">
                        <i class="bi bi-reply"></i> Reply
                    </a>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>