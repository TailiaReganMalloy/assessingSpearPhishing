<header class="app-header">
    <div class="header-left">
        <a href="/inbox" class="logo-link">
            <svg class="logo-icon-small" viewBox="0 0 60 60" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M30 5L52 17.5V42.5L30 55L8 42.5V17.5L30 5Z" stroke="#00A3E0" stroke-width="2" fill="none"/>
                <path d="M30 15L42 22V36L30 43L18 36V22L30 15Z" stroke="#00A3E0" stroke-width="2" fill="none"/>
                <path d="M30 25L36 28.5V35.5L30 39L24 35.5V28.5L30 25Z" fill="#00A3E0"/>
            </svg>
            <span class="logo-text-small">BlueMind</span>
        </a>
    </div>
    <div class="header-right">
        <div class="user-info">
            <span class="user-name"><%= user.displayName %></span>
            <span class="user-email"><%= user.email %></span>
        </div>
        <form action="/auth/logout" method="POST" class="logout-form">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button type="submit" class="btn-logout" title="Logout">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M9 21H5a2 2 0 01-2-2V5a2 2 0 012-2h4"/>
                    <polyline points="16 17 21 12 16 7"/>
                    <line x1="21" y1="12" x2="9" y2="12"/>
                </svg>
                Logout
            </button>
        </form>
    </div>
</header>
