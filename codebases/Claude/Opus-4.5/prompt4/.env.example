# Environment variables for BlueMind Security Demo
# Copy this file to .env and modify the values for production use

# JWT secret key - CHANGE THIS IN PRODUCTION!
JWT_SECRET=your-super-secure-jwt-secret-key-change-in-production-minimum-32-characters

# Session secret key - CHANGE THIS IN PRODUCTION!
SESSION_SECRET=your-session-secret-change-in-production-minimum-32-characters

# Server configuration
PORT=3000
NODE_ENV=development

# Database configuration (optional)
DATABASE_PATH=./secure_demo.db
SESSIONS_DATABASE_PATH=./sessions.db

# Security settings (optional)
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_ATTEMPTS=5
ACCOUNT_LOCKOUT_ATTEMPTS=5
ACCOUNT_LOCKOUT_TIME_MS=900000  # 15 minutes

# Session settings (optional)
SESSION_PRIVATE_COMPUTER_MS=86400000    # 24 hours
SESSION_PUBLIC_COMPUTER_MS=1800000      # 30 minutes

# Security monitoring (optional)
ENABLE_SECURITY_LOGGING=true
LOG_FAILED_ATTEMPTS=true
DETECT_SUSPICIOUS_ACTIVITY=true